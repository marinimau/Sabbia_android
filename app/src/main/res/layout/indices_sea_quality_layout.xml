<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- sea quality -->
        <androidx.cardview.widget.CardView
            style="@style/BaseTheme.IndexCard">

            <LinearLayout
                style="@style/BaseTheme.IndexContainer">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="110dp"
                    android:layout_height="110dp">

                    <ProgressBar
                        style="@style/BaseTheme.IndexProgressCircle"
                        android:max="50"
                        android:progress="31" />

                    <TextView
                        style="@style/BaseTheme.IndexProgressCircleLabel"
                        android:text="@string/index_placeholder_rating" />

                </RelativeLayout>


                <TextView
                    style="@style/BaseTheme.IndexLabel"
                    android:text="@string/quality_index_sea" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</HorizontalScrollView>