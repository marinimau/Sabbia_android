<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BaseTheme.Card"
    android:layout_margin="12dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:minHeight="100dp"
        android:background="@android:color/transparent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/root_container"
            android:layout_alignBottom="@id/root_container"
            android:layout_alignStart="@id/root_container"
            android:layout_alignEnd="@id/root_container"
            android:src="@drawable/bg_gradient_sea" />

        <LinearLayout
            android:id="@+id/root_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|end"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:fontFamily="@font/sf_display_bold"
                android:textSize="16sp"
                android:textAlignment="viewEnd"
                android:text="@string/item_title" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:fontFamily="@font/sf_display_medium"
                android:textSize="12sp"
                android:textAlignment="viewEnd"
                android:text="@string/item_subtitle" />

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>