<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.bottomnavigation.BottomNavigationView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="0dp"
    android:layout_marginStart="0dp"
    android:layout_gravity="bottom"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:itemIconSize="25dp"
    android:background="?attr/elevationOverlayColor"
    app:itemRippleColor="?attr/colorPrimaryDark"
    app:itemIconTint="@color/menu_selector_color"
    app:itemTextColor="@color/menu_selector_color"
    app:labelVisibilityMode="labeled"
    app:itemTextAppearanceActive="@style/NavBarLabel"
    app:itemTextAppearanceInactive="@style/NavBarLabel"
    android:elevation="20dp"
    app:menu="@menu/bottom_nav_menu" />
